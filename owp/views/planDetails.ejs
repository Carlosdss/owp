  <div class="container plan-container">
    <div class="row">

      <div>
        <div class="plan-head-1 col-sm-6"> <%= plan.title %>
          <span id="creator">, by <%= plan.creator %> </span> </div>

        <div class="plan-head-2 col-sm-6"> <%= plan.category %> </div>

      </div>

      <br>
      <br>

      <div class="plan-description">
        <%= plan.description %>
      </div>


      <div>
        <div class="plan-bottom-1 col-sm-6"> <strong class="large-strong"><%= plan.date %></strong> </div>

        <div class="plan-bottom-2 col-sm-6"> IÂ´m in! </div>
      </div>

      <div class="plan-Pic">
        <img class="plan-image" src="<%= plan.picPath %>">
      </div>

    </div>

  </div>

  <div id="map"></div>

  <div class="wrapper">
      <form method="post" action="/plans/<%= plan._id %>" class="ccform">

      <div class="ccfield-prepend">
          <input class="ccformfield" type="text" name="text" placeholder="Write your comments" required>
      </div>

      <div class="ccfield-prepend">
          <input class="ccbtn" type="submit" value="Submit">
      </div>
      </form>

    </div>
    <br><br>


      <% comments.forEach((comment) => { %>

        <form method="post" action="/plans/<%= plan._id %>" class="ccform">

          <div class="ccfield-prepend">

            <div class="ccformfield">
              <%= comment.text %>
            </div>

            <div class="comment Author">
              by <%= comment.creator %>
            </div>

        </form>

        <%  }) %>














